{
  "name": "foed-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground --server-only --port=4005",
    "start-server": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "start": "yarn deploy && npm-run-all --parallel start-server playground",
    "now-start": "NODE_ENV=production node build/index.js",
    "precommit": "lint-staged",
    "prisma": "prisma",
    "deploy": "prisma deploy --force && prettier --write 'src/generated/**'",
    "lint": "tslint -p .",
    "test": "npm run -s lint && echo 'No real tests for now.'",
    "build": "rm -rf build && tsc && npm run -s build-schema",
    "build-schema": "ts-node src/schema.ts",
    "now-build": "echo please zeit, do not build this"
  },
  "lint-staged": {
    "*.{js,json,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/node": "10.5.4",
    "apollo-server": "^2.0.0",
    "email-templates": "^4.0.1",
    "graphql": "^0.13.2",
    "graphql-authentication": "^0.5.0",
    "graphql-authentication-prisma": "^0.1.1",
    "graphql-import": "^0.6.0",
    "graphql-middleware": "^1.5.0",
    "graphql-shield": "^2.0.6",
    "nodemailer": "^4.4.2",
    "nodemailer-mailgun-transport": "^1.4.0",
    "now-storage": "^1.2.0",
    "prisma-binding": "2.1.1",
    "pug": "^2.0.3",
    "sharp": "^0.20.2",
    "speakingurl": "^14.0.1",
    "stream-to-array": "^2.3.0",
    "validator": "^10.2.0"
  },
  "devDependencies": {
    "@types/email-templates": "^3.1.0",
    "@types/nodemailer": "^4.3.1",
    "@types/nodemailer-mailgun-transport": "^1.3.3",
    "@types/sharp": "^0.17.8",
    "@types/speakingurl": "^13.0.2",
    "@types/validator": "^9.4.0",
    "@volst/tslint-config": "^0.2.1",
    "dotenv": "6.0.0",
    "dotenv-cli": "^1.4.0",
    "graphql-cli": "^2.15.13",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "prisma": "1.12.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.0.1"
  }
}
